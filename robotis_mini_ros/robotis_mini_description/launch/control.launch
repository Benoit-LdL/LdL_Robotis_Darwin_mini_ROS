<launch>

  <arg name="model" default="$(find robotis_mini_ros)/urdf/robotis_mini.urdf.xacro"/>
  <arg name="rvizconfig" default="$(find robotis_mini_ros)/rviz/robotis_mini.rviz" />

  <include file="$(find robotis_mini_ros)/launch/gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  
  <!-- This param file is where any environment-agnostic (live or simulation)
  configuration should be loaded, including controllers -->
  <rosparam command="load" file="$(find robotis_mini_ros)/config/robotis_mini_control.yaml" />

  <!-- This node loads the controllers into a controller manager (real or simulated). The
  controllers are defined in config/robotis_mini_control.yaml -->
  <node name="robotis_mini_controller_spawner" pkg="controller_manager" type="spawner" ns="robotis_mini" 
    args="left_hip1_controller
        right_hip1_controller
        right_hip2_controller
        right_knee_controller
        right_ankle1_controller
        right_ankle2_controller
        left_hip2_controller
        left_knee_controller
        left_ankle1_controller
        left_ankle2_controller
        right_shoulder1_controller
        right_shoulder2_controller
        right_elbow_controller
        left_shoulder1_controller
        left_shoulder2_controller
        left_elbow_controller
         --shutdown-timeout 50 --timeout 50"/>
<!--
  <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">

    <param name="default_topic" value="/r2d2_diff_drive_controller/cmd_vel"/>
  </node>
-->
</launch>
