<launch>

  <arg name="model" default="$(find robotis_mini_ros)/urdf/robotis_mini.urdf.xacro"/>
  <arg name="rvizconfig" default="$(find robotis_mini_ros)/rviz/robotis_mini.rviz" />

  <include file="$(find robotis_mini_ros)/launch/gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />

  <!-- This param file is where any environment-agnostic (live or simulation)
  configuration should be loaded, including controllers -->
  <rosparam command="load" file="$(find robotis_mini_ros)/config/control.yaml" />

  <!-- This node loads the two controllers into a controller manager (real or simulated). The
  controllers are defined in config/control.yaml -->
  <node name="robotis_mini_controller_spawner" pkg="controller_manager" type="spawner"
    args="robotis_mini_joint_state_controller
          robotis_mini_diff_drive_controller
          robotis_mini_head_controller
          robotis_mini_gripper_controller
          --shutdown-timeout 3"/>

  <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">

    <param name="default_topic" value="/r2d2_diff_drive_controller/cmd_vel"/>
  </node>

</launch>
