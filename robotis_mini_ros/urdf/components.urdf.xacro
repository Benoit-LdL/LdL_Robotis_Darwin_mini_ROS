<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robotis_mini">
  
  <xacro:macro name="robotis_mini_material">
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </xacro:macro>
  
  <xacro:macro name="robotis_mini_motor_material">
    <material name="transparent_gray">
      <color rgba="0.5 0.5 0.5 0.8"/>
    </material>
  </xacro:macro>
  
  <property name="PI" value="3.14159"/>

  <xacro:macro name="robotis_mini_link" params="name origin_xyz origin_rpy mesh_file">
    <link name="${name}">
      <visual>
        <origin xyz="${origin_xyz}" rpy="${origin_rpy}" />
        <geometry>
          <mesh filename="package://robotis_mini_model/meshes/${mesh_file}" scale="0.001 0.001 0.001" />
        </geometry>
        <xacro:robotis_mini_material/>
      </visual>
    </link>
  </xacro:macro>
  
  <xacro:macro name="robotis_mini_motor" params="name origin_xyz origin_rpy">
    <link name="${name}">
      <visual>
        <origin xyz="${origin_xyz}" rpy="${origin_rpy}" />
        <geometry>
          <mesh filename="package://robotis_mini_model/meshes/XL-320D.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <xacro:robotis_mini_motor_material/>
      </visual>
    </link>
  </xacro:macro>

  <xacro:macro name="robotis_mini_revolute_joint" params="name axis_xyz origin_xyz origin_rpy parent_link child_link">
    <joint name="${name}" type="revolute">
      <axis xyz="${axis_xyz}"/>
      <limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/>
      <origin xyz="${origin_xyz}" rpy="${origin_rpy}"/>
      <parent link="${parent_link}"/>
      <child link="${child_link}"/>
    </joint>
  </xacro:macro>
  
  <xacro:macro name="robotis_mini_fixed_joint" params="name origin_xyz origin_rpy parent_link child_link">
    <joint name="${name}" type="fixed">
      <origin xyz="${origin_xyz}" rpy="${origin_rpy}"/>
      <parent link="${parent_link}"/>
      <child link="${child_link}"/>
    </joint>
  </xacro:macro>
</robot>
